<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preference">

        <rikka.preference.SimpleMenuPreference
            app:defaultValue="zh-CHT"
            app:entries="@array/entries_video_language"
            app:entryValues="@array/entries_value_video_language"
            app:icon="@drawable/ic_baseline_language_24"
            app:key="video_language"
            app:title="@string/video_language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/download">

        <com.yenaly.yenaly_libs.base.preference.LongClickablePreference
            app:icon="@drawable/ic_baseline_download_24"
            app:key="download_path"
            app:title="@string/download_path" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other">

        <Preference
            app:icon="@drawable/ic_baseline_update_24"
            app:key="update"
            app:title="@string/check_update" />

        <Preference
            app:icon="@drawable/ic_baseline_info_24"
            app:key="about"
            app:summary="@string/hanime_app_name"
            app:title="@string/about" />

    </PreferenceCategory>

</PreferenceScreen>